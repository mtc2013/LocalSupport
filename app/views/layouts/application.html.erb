<!DOCTYPE html>
<html>
<head>
  <title>Harrow Community Network</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>

<body>
<% flash.each do |name, msg| %>
<%= content_tag :div, msg, :class => "flash #{name}" %>
<% end %>

<%= render 'layouts/header' %>
<div class="container">
<div class="row">
  <div class="span6">
    <%= yield :map %>
  </div>
  <div class="span6">
    <%= yield %>
  </div>
</div>
<br>
<br>
<div class="row">
  <div class="span4">
    <%= render 'layouts/footer' %>
  </div>
  <div class="span4">
    <%= render 'layouts/footer2' %>
  </div>
  <div class="span4">
    <%= render 'layouts/footer3' %>
  </div>

  <!--New row for alert -->
  <div class="row">
  <div class="span10 offset1">
    <% if cookies_accepted?%>
        <h1>cookies accepted</h1>
    <% else %>
        <!-- When this modal dialog works, put it in an 'if' branch -->
        <%= render :partial => 'layouts/cookie_alert' %>

    <% end %>

  </div>
    </div>

</div>
</div>
<!--this is where the gmaps scripts are added-->
<%= yield :scripts %>
</body>
</html>
